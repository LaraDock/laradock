server {
    listen      80;
    listen [::]:80;

    server_name app.twojkalendarz.pl;

    location / {
        rewrite ^ https://$host$request_uri? permanent;
    }

    location ^~ /.well-known {
        allow all;
        root  /data/letsencrypt/;
    }

## working
#    location /.well-known {
#        alias /data/letsencrypt/.well-known;
#    }
}

server {
    listen      443           ssl http2;
    listen [::]:443           ssl http2;
    server_name               app.twojkalendarz.pl;

    add_header                Strict-Transport-Security "max-age=31536000" always;

    ssl_session_cache         shared:SSL:20m;
    ssl_session_timeout       10m;

    ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers               "ECDH+AESGCM:ECDH+AES256:ECDH+AES128:!ADH:!AECDH:!MD5;";

    ssl_stapling              on;
    ssl_stapling_verify       on;
    resolver                  8.8.8.8 8.8.4.4;

    ssl_certificate           /etc/letsencrypt/live/app.twojkalendarz.pl/fullchain.pem;
    ssl_certificate_key       /etc/letsencrypt/live/app.twojkalendarz.pl/privkey.pem;
    ssl_trusted_certificate   /etc/letsencrypt/live/app.twojkalendarz.pl/chain.pem;

    access_log                /dev/stdout;
    error_log                 /dev/stderr info;

    root /var/www/public;
    index index.php index.html index.htm;

    location / {
         try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
        try_files $uri /index.php =404;
        fastcgi_pass php-upstream;
        fastcgi_index index.php;
        fastcgi_buffers 16 16k;
        fastcgi_buffer_size 32k;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        #fixes timeouts
        fastcgi_read_timeout 600;
        include fastcgi_params;
    }

    location ~ /\.ht {
        deny all;
    }
    # other configs
}
